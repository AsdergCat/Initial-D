@model initial_d.Models.LoginViewModel
@{
    ViewBag.Title = "Initia-D";
    Layout = "";

    bool isError = ViewBag.ErrorMessage != null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/ContentCSS")
    @Styles.Render("~/Content/CSS/login-view.css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="main-wrap">


        <div class="login-cont">

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="d-flex flex-column justify-content-center align-items-center mb-3">
                    <h3 class="mb-0 font-weight-bold">Initial-D</h3>
                    <small>Sistema de Administración </small>
                </div>


                <div class="form-group row">
                    @Html.LabelFor(m => m.Username, new { @class = "col-sm-3 col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group row">
                    @Html.LabelFor(m => m.Password, new { @class = "col-sm-3 col-form-label" })
                    <div class="col-md-9">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="custom-control custom-checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "custom-control-input" })
                            @Html.LabelFor(m => m.RememberMe, new { @class = "custom-control-label" })
                        </div>
                    </div>
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="d-flex justify-content-center">
                    <button id="login-btn" type="submit" class="btn btn-warning">
                        Login
                    </button>
                </div>

                @* Enable this once you have account confirmation enabled for password reset functionality
                <p>
                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                </p>*@

            }
        </div>

    </div>

</body>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/MainScripts")
</html>