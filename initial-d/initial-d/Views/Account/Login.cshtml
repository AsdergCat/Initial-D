@model initial_d.Models.LoginViewModel
@{
    ViewBag.Title = "Initia-D";
    Layout = "~/Views/Account/_LayoutAccount.cshtml";

    bool isError = ViewBag.ErrorMessage != null;

    string olvideContrasenaURL = Url.Action("ForgotPassword", "Account");
}


<div class="login-cont col-11">

    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="d-flex flex-column justify-content-center align-items-center mb-3">
            <h3 class="mb-0 font-weight-bold">Initial-D</h3>
            <small>Sistema de Administración </small>
        </div>


        <div class="d-flex flex-column flex-sm-row mb-3" style="height: 36px;">
            @Html.LabelFor(m => m.Username, new { @class = "col-sm-3 mr-3 font-weight-bold col-form-label" })
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control h-100" })
        </div>
        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })


        <div class="d-flex flex-column flex-sm-row" style="height: 36px;">
            @Html.LabelFor(m => m.Password, new { @class = "col-sm-3 mr-3 font-weight-bold col-form-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control h-100" })
        </div>
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

        <div class="my-2 row">
            <a href="@olvideContrasenaURL" class="ml-auto">Olvidé mi Contraseña</a>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="d-flex justify-content-center">
            <button id="login-btn" type="submit" class="btn btn-warning">
                Login
            </button>
        </div>

    }
</div>